.avatar {
  width: 40px;
  border-radius: 50%;
  height: 40px;
}

.avatar-small {
  width: 20px;
  border-radius: 50%;
  min-height: 20px;
  position: relative;
  top:5px;
  left: 5px;
}

.avatar-large {
  width: 56px;
  border-radius: 50%;
}

.avatar-bordered {
  width: 40px;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
}

.avatar-square {
  width: 40px;
  border-radius: 0px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
}

.avatar-comment {
  width: 30px;
  border-radius: 50%;
}

.avatar-show {
  width: 50px;
  border-radius: 50%;
  height: 50px;
  display: inline;
}

.avatar-username {
  padding: 10px 0px;
}


