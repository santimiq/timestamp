<h1>Event feed</h1>

<% @event.comments.each do |comment| %>
<ul>
  <% if current_user == comment.user %>
  <li><p><%= comment.user.username %>
         <%= comment.content %>
         <%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
         <%= time_ago_in_words(comment.created_at) %></p></li>
  </ul>
  <% else %>
  <li><p><%= comment.user.username %>
         <%= comment.content %>
         <%= time_ago_in_words(comment.created_at) %></p></li>
  </ul>
<% end %>
<% end %>

<%= simple_form_for [@event, @comment] do |f| %>
<%= f.text_field :content %>
<%= f.submit 'Post Comment' %>
<% end %>

