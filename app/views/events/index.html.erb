<!-- BUTTON MODAL -->
<button type="button" class="btn button-marker-map" data-toggle="modal" data-target="#exampleModal">
  <i class="fas fa-map-marker"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog slideInUp animated" role="document">
    <div class="modal-content css-modal-content">
      <div class="modal-header">
        <h5 class="modal-title event-title" id="exampleModalLabel">Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="container container-form">
          <div class="row">
            <div class="col-sm-12">
              <%= simple_form_for(@event) do |f| %>
              <div class="form-inputs">
                <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "title" },
                placeholder: "Your event title" %>
                <%= f.input :description,
                required: true,
                input_html: { autocomplete: "description" },
                placeholder: "Description of your event"%>
                <%= f.input :end_time, collection: 1..24,
                required: true,
                input_html: { autocomplete: "" },
                placeholder: "Timestamp expiration" %>
                <%= f.input :picture, as: :file, label: "Upload photo"%>
                <%= f.input :picture_cache, as: :hidden %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Timestamp", class: "form-button" %>
              </div>
              <% end %>

            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
  </div>





