<div class="container border">

    <h3 class="text-center"><%= @user.username.humanize %> Following</h3>

    <% @following.each do |f| %>
     <div class="row">  
        <div class="col-2">
                <%= cl_image_tag f.profile_photo , class: "avatar" %>
        </div>
        <div class="col-4">
                <%= link_to "#{f.username}", user_path(f)%> 
        </div>

        <div class="col-2">
                <i class="fas fa-angle-up follow-color-arrow"></i>  <%= f.following.count %>  
                <br>
                <i class="fas fa-angle-down followers-color-arrow"></i> <%= f.followers.count %>  
        </div>  
        
        
       <div>
            <% if current_user.following?(f) %>
                <h1 class="btn btn-light" data-following="<%=f.username%>"><%= link_to :Unfollow, unfollow_user_path(f.id), method: 'delete', remote: true%></h1>
            <% else %>
                <h1 class="btn btn-dark" data-following="<%=f.username%>"><%= link_to :Follow, follow_user_path(f.id), method: 'post', remote: true%></h1>
             <% end %>
        </div>

     </div>
    <% end %>
</div>


